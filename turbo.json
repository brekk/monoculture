{
  "globalEnv": ["NODE_ENV", "CI"],
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "lint": {},
    "build": {
      "outputs": ["dist/**", ".next/**", "*.artifact.js"]
    },
    "test": {
      "outputs": ["coverage/lcov-info"]
    },
    "test:ci": {
      "outputs": ["ci-report.json"]
    },
    "test:snapshot": {
      "outputs": ["coverage/lcov-info"]
    },
    "test:integration": {
      "dependsOn": ["build"],
      "outputs": ["coverage/lcov-info"]
    },
    "meta:graph": {
      "outputs": ["graph.svg"]
    }
  }
}
