{
  "globalEnv": ["NODE_ENV"],
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "test": {
      "outputs": ["coverage/**"],
      "outputMode": "full"
    },
    "test:watch": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "*.artifact.js"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "deploy": {
      "dependsOn": ["test", "build"],
      "outputs": ["public/**"]
    },
    "meta:graph": {
      "outputs": ["graph.svg"]
    }
  }
}
